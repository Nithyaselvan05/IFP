<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palanim.botcontroller">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/call"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BotController"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name=".arenaAdv"
            android:label="@string/title_activity_arena_adv"
            android:theme="@style/Theme.BotController.NoActionBar"></activity>
        <activity
            android:name=".listStops"
            android:label="@string/title_activity_list_stops"
            android:theme="@style/Theme.BotController.NoActionBar" />
        <activity
            android:name=".settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.BotController.NoActionBar" />
        <activity
            android:name=".setupArena"
            android:label="@string/title_activity_setup_arena"
            android:theme="@style/Theme.BotController.NoActionBar" />
        <activity
            android:name=".robotCaller"
            android:label="@string/title_activity_robot_caller"
            android:theme="@style/Theme.BotController.NoActionBar" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>