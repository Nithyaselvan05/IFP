<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsone"

    tools:context=".setupArena">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/ubuntu_light"
        android:text="Setup Arena"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="91dp"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="158dp"
        app:srcCompat="@drawable/arena" />

    <TextView
        android:id="@+id/dTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="100dp"
        android:clickable="true"
        android:fontFamily="@font/ubuntu_light"
        android:onClick="dt"
        android:text="Deprecated Tags"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dTags2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="152dp"
        android:clickable="true"
        android:fontFamily="@font/ubuntu_light"
        android:onClick="obs"
        android:text="Obstacles"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dTags3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="131dp"
        android:clickable="true"
        android:fontFamily="@font/ubuntu_light"
        android:onClick="stops"
        android:text="Select to Edit"
        android:textColor="#DA00FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dTags4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="140dp"
        android:clickable="true"
        android:fontFamily="@font/ubuntu_light"
        android:onClick="liststps"
        android:text="List of Stops"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="33dp"
        android:clickable="true"
        android:onClick="ticked"
        app:srcCompat="@drawable/tick" />

    <EditText
        android:id="@+id/box1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="241dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_light"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/box2"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_light"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/optionView"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/ubuntu_light"
        android:text="Select option to modify arena"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="302dp"
        app:srcCompat="@drawable/tags" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="300dp"
        app:srcCompat="@drawable/obstacles" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="363dp"
        android:layout_marginEnd="302dp"
        app:srcCompat="@drawable/listofstops" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="76dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="172dp"
        android:onClick="submit"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="155dp"
        android:fontFamily="monospace"
        android:text="Save Changes"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

</RelativeLayout>